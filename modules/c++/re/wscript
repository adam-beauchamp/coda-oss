NAME            = 're'
MAINTAINER      = 'tzellman@users.sourceforge.net gojira_1@users.sourceforge.net'
VERSION         = '1.0'
MODULE_DEPS     = 'sys'
DEFINES         = 'USE_PCRE'

set_options = configure = distclean = lambda p: None

def build(bld):
    env = bld.variantEnv
    
    kw = globals().copy()
    if 'MAKE_PCRE' in env:
        kw['USELIB_LOCAL'] = 'PCRE'
    else:
        kw['USELIB'] = 'PCRE'
    bld.module(**kw)
